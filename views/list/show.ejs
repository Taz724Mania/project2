<!DOCTYPE html>
<html lang="en">
  <%- include('./cssjs.ejs') %> 
  <body class="showPage">

    <main>
      <h1 class="name"> <%= list.item %> </h1>
      <div class="contents">
        <article>
  
        <h2>
            <%= list.brand %>
          </h2> 

        <h2>
            <%= list.location %>
          </h2>

        <h2>
            <%= list.cost %>
          </h2>

        <h2>
            <%= list.quantity %>
          </h2>

        <h2> 
            <%= list.purchased ? "Purchased" : "Not Purchased" %>
          </h2>

          

          <a href="/list/<%= list._id %>/edit"><button class="Button">Edit this Item</button></a>

          <form action="/list/<%= list._id %>?_method=DELETE" method="POST">

            <button class="Button">Delete this Item</button>

          </form>

          <div>
            <a href="/list"><button class="Button">Dashboard</button></a>
        </div>
          
        </article>
      </div>
    </main>
  </body>
</html>